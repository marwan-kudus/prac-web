generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  price       Int
  imageUrl    String
  description String

  cartItems   Cart[]   // ✅ Relasi ke Cart
}

model Cart {
  id        String   @id @default(uuid())
  productId String
  quantity  Int
  userId    String?  // ✅ Optional agar migrasi tidak gagal

  product   Product  @relation(fields: [productId], references: [id])
}
